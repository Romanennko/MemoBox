<StartMenu>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.15
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: 'Welcome to MemoBox'
        font_size: '50sp'
        size_hint: (None, None)
        size: 400, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        color: 1, 1, 1, 0.85

    AsyncImage:
        source: 'C:\\Projects\\PyCharm\\MemoBox\\img\\background-for-start-menu.png'
        size_hint: (None, None)
        size: 400, 400
        pos_hint: {'center_x': 0.5, 'center_y': 0.47}

    StyledButton:
        background_normal: 'C:\\Projects\\PyCharm\\MemoBox\\img\\dropdown-button.png'
        size_hint: None, None
        size: 75, 75
        pos_hint: {'center_x': 0.04, 'center_y': 0.946}
        canvas.before:
            Color:
                rgba: self.background
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [10]
        on_press: app.toggle_menu('start_menu')
    # START sidebar
    BoxLayout:
        id: sidebar
        orientation: 'vertical'
        size_hint: None, None
        pos_hint: {'center_x': 0.125, 'center_y': 0.445}
        height: 680
        width: 250
        opacity: 0
        canvas.before:
            Color:
                rgba: 1, 1, 1, 0.03
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [10]

        StyledButton:
            text: 'Profile'
            background_color: 1, 1, 1, 0
            canvas.before:
                Color:
                    rgba: self.background
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            on_press: root.manager.current = 'profile_menu'

        StyledButton:
            text: 'Watch Menu'
            background_color: 1, 1, 1, 0
            canvas.before:
                Color:
                    rgba: self.background
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            on_press: root.manager.current = 'watch_menu'

        StyledButton:
            text: 'Task Menu'
            background_color: 1, 1, 1, 0
            canvas.before:
                Color:
                    rgba: self.background
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            on_press: root.manager.current = 'task_menu'

        StyledButton:
            text: 'Saved Menu'
            background_color: 1, 1, 1, 0
            canvas.before:
                Color:
                    rgba: self.background
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]
            on_press: root.manager.current = 'saved_menu'
    # END sidebar


